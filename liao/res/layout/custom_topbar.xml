<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainItemLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_height"
    android:background="@color/toolbarcolor">

    <LinearLayout
        android:id="@+id/topbarLeftLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/back_layout_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/topbarLeftBackImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/topbarLeftBackTitle"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/back_arrow"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="@dimen/text_big" />
    </LinearLayout>

    <TextView
        android:id="@+id/topbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_big_big" />

    <ImageButton
        android:id="@+id/topbarRightImageButton"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/transparent"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/topbarRightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="@color/font434343"
        android:textSize="@dimen/text_big"
        android:visibility="gone" />

</RelativeLayout>